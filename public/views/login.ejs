<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head', {title: 'Login' , noValidate: true, noNav: true}) %>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.1/gsap.min.js"
      integrity="sha512-H6cPm97FAsgIKmlBA4s774vqoN24V5gSQL4yBTDOY2su2DeXZVhQPxFK4P6GPdnZqM9fg1G3cMv5wD7e6cFLZQ=="
      crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <% if (error) { %>
      <script src="/js/login.js" defer></script>

      <% } %>
</head>

<body>
  <section class="hero has-background-white-ter is-fullheight">
    <div class="hero-body">
      <div class="container">
        <div class="columns is-centered">
          <div class="column is-5-tablet is-4-desktop">
            <form class="box" action="/users/login" method="post">
              <h3 class="title is-3">Entrar</h3>
              <div class="field">
                <label class="label" for="email">Email</label>
                <div class="control has-icons-left">
                  <input type="email" placeholder="Informe seu email" name="email" class="input" required>
                  <span class="icon is-small is-left">
                    <i class="fa-solid fa-envelope"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                <label class="label" for="email">Senha</label>
                <div class="control has-icons-left">
                  <input type="password" placeholder="Informe sua senha" name="password" class="input" required>
                  <span class="icon is-small is-left">
                    <i class="fa-solid fa-lock"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                <button class="button is-success">Entrar</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <% if (error) { %>
    <div class="modal-container">
      <div class="modal-error">
        <i onclick="closeModal()" class="fa-solid fa-xmark"></i>
        <div class="modal-desc">
          <%= message %>
        </div>
      </div>
    </div>
    <% } %>
</body>

</html>