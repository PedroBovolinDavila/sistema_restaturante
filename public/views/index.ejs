<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head', {title: 'Restaurante' , noValidate: false, noNav: false}) %>
</head>

<body>
  <%- include('partials/navbar', { username: user.name, active: 'home' , admin: user.isAdmin } ) %>
    <audio id="audio" src="/audio/sino.mp3"></audio>

    <div class="container">

      <% if (error !=undefined) { %>
        <div class="row mt-4">
          <div class="col-12">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          </div>
        </div>
        <% } %>

          <div class="row align-items-center mt-4">
            <div class="col-12">
              <div class="table-responsive">
                <table class="table table-hover table-striped">
                  <caption>Lista de pedidos</caption>
                  <thead class="table-dark">
                    <tr>
                      <th scope="col">Mesa</th>
                      <th scope="col">Pedido</th>
                      <th scope="col">Adicionais</th>
                    </tr>
                  </thead>
                  <tbody id="table-data-add">
                    <!-- Conteudo adicionado via javascript -->
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="row mt-5">
            <div class="col-12">

              <table class="table table-hover table-striped">
                <caption>Lista de chamados</caption>
                <thead class="table-dark">
                  <tr>
                    <th scope="col">Mesa</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Preço</th>
                  </tr>
                </thead>
                <tbody id="table-data-add2">
                  <!-- Conteudo adicionado via javascript -->

                </tbody>
              </table>

              <!-- Modal 2 -->
              <div class="modal fade" id="modal2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Pedido mesa <span id="modalMesa"></span></h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <div class="form-floating mb-3">
                        <input type="text" name="email" class="form-control" id="modalNumeroMesa"
                          placeholder="name@example.com">
                        <label for="numeroMesa">Número da mesa</label>
                      </div>
                      <div class="form-floating mb-3">
                        <input type="text" name="text" class="form-control" id="modalPedido" placeholder="modalPedido">
                        <label for="pedido">Pedido</label>
                      </div>
                      <div class="form-floating mb-3">
                        <input type="text" name="password" class="form-control" id="modalAdicionais"
                          placeholder="Password">
                        <label for="adicionais">Adicionais</label>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" id="btnCancelar" class="btn btn-danger">Cancelar</button>
                      <button type="button" id="btnSalvar" class="btn btn-warning">Salvar</button>
                      <button type="button" id="btnFinalizar" class="btn btn-success">Finalizar</button>
                    </div>
                  </div>
                </div>
              </div>

              <div class="modal fade" id="modalPedidos" tabindex="-1" aria-labelledby="modalPedidosLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="modalPedidosLabel">Chamado mesa <span id="modalPedidosMesa"></span>
                      </h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <div class="form-floating mb-3">
                        <p class="d-inline me-2">Ações: </p> <button class="btn btn-secondary">Cancelar</button>
                        <button class="btn btn-success" id="btnLiberar">Liberar</button>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" id="btnCancelar" class="btn btn-danger"
                        data-bs-dismiss="modal">Fechar</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.4.1/socket.io.js"
      integrity="sha512-MgkNs0gNdrnOM7k+0L+wgiRc5aLgl74sJQKbIWegVIMvVGPc1+gc1L2oK9Wf/D9pq58eqIJAxOonYPVE5UwUFA=="
      crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/js/index.js" defer></script>
    <% let userId=user._id %>
      <script>
        localStorage.setItem('userId', '<%- userId %>');
      </script>

</body>

</html>